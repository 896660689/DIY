#!/bin/sh

case "$1" in
	start)
		echo "Starting aria2c daemon..."
		Task=/opt/etc/aria.task
		Downloads=/volume1/Downloads
		if [ ! -r $Task ]; then touch $Task; fi
		/opt/bin/aria2c --dir=$Downloads --file-allocation=falloc --event-poll=select --disable-ipv6 --enable-rpc --rpc-listen-port=6800 --rpc-listen-all --rpc-listen-all=true --rpc-allow-origin-all=true --max-concurrent-downloads=5 --max-connection-per-server=5 --continue=true --save-session=$Task --input-file=$Task --daemon=true --user-agent="netdisk;5.3.4.5;PC;PC-Windows;5.1.2600;WindowsBaiduYunGuanJia" --split=10 --timeout=1 --max-tries=0 --max-connection-per-server=16
		;;
	stop)
		echo "Shutting down aria2c daemon..."
		killall aria2c
		;;
	restart)
		$0 stop
		sleep 2
		$0 start
		;;
	*)
		echo $"Usage: $0 {start|stop|restart}"
esac

